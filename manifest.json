{
	"name": "__MSG_extName__",
	"version": "1.0",
    "manifest_version": 2,
	"description": "__MSG_extDescription__",
    "homepage_url": "http://litegem.com/crx",
    "default_locale": "en",
    "version": "1",
    "manifest_version": 2,
    "icons": { "16": "img/16.png",
               "48": "img/48.png",
              "128": "img/128.png" },
