{
    "name": "__MSG_extName__",
    "version": "1.3",
    "manifest_version": 2,
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "manifest_version": 2,
    "icons": { "16": "img/16.png",
               "48": "img/48.png",
              "128": "img/128.png" },
    "options_page": "options.html",
    "background": {
        "page": "background.html"
    },
    "permissions" : [
        "clipboardWrite",
        "contextMenus",
        "notifications",
        "unlimitedStorage",
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/zepto.min.js", "js/selection.js"]
    }]
}
